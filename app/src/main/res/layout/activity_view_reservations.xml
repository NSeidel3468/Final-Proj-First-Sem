<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewReservationsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin"
        android:text="My    Reservations"
        android:fontFamily="@font/league"
        android:textColor="@color/primaryColor"
        android:textSize="40sp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_margin="@dimen/margin"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/gymNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gym name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dateTimeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date, time" />

            <TextView
                android:id="@+id/playerNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"/>

            <Button
                android:id="@+id/cancelReservationButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Cancel Reservation"
                />


        </LinearLayout>
    </ScrollView>



</androidx.appcompat.widget.LinearLayoutCompat>